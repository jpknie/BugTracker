@model IEnumerable<BugTracker.Models.IssueEntry>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Priority
        </th>
        <th>
            Solved
        </th>
        <th>
            Created By
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IssuePriority.PriorityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsSolved)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IssueEntryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.IssueEntryId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IssueEntryId })
        </td>
    </tr>
}

</table>
